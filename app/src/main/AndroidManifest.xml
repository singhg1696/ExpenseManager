<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.expensemanager">

    <uses-permission
        android:name="android.permission.CALL_PHONE"></uses-permission>
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>


    <application
        android:allowBackup="true"
        android:icon="@drawable/splash_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.AboutUs"
            android:theme="@style/expenseScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.expensemanager.view.WelcomeActivity" />
        </activity>
        <activity
            android:name=".view.ContactUs"
            android:theme="@style/expenseScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.expensemanager.view.WelcomeActivity" />
        </activity>
        <activity
            android:name=".view.Tab1"
            android:label="Add Categories"
            android:theme="@style/expenseScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.expensemanager.view.SettingsActivity" />
        </activity>
        <activity
            android:name=".view.Update_AddExpense"
            android:theme="@style/expenseScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.expensemanager.view.SettingsActivity" />
        </activity>
        <activity android:name=".view.SettingsActivity"
            android:theme="@style/expenseScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.expensemanager.view.WelcomeActivity" />
        </activity>
        <activity
            android:name=".view.Tab2"
            android:theme="@style/expenseScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.expensemanager.view.WelcomeActivity" />
        </activity>
        <activity android:name=".view.Navigation_Activities.TabHistory_week" />
        <activity
            android:name=".view.WelcomeActivity"
            android:label="@string/title_activity_welcome"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.SignUpActivity" />
        <activity android:name=".view.LoginActivity" />
        <activity
            android:name=".view.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>