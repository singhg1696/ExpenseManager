<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SignUpActivity"
    android:background="@drawable/universal_login">

    <TextView
        android:layout_width="200dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="211dp"
        android:fontFamily="sans-serif-black"
        android:lines="2"
        android:text="Registeration"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/edittext_universal"
            android:hint="@string/name"
            android:padding="5dp"
            android:inputType="textPersonName"
            android:textSize="16sp"
            android:textColor="#000000"
            android:autofillHints="@string/name" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/txtEmail"
            android:background="@drawable/edittext_universal"
            android:hint="@string/e_mail"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:textColor="#000000"
            android:autofillHints="@string/e_mail" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/txtPass"
            android:background="@drawable/edittext_universal"
            android:hint="@string/password"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:textColor="#000000"
            android:autofillHints="@string/password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/txtRepeatPass"
            android:background="@drawable/edittext_universal"
            android:hint="@string/re_enter_password"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:textColor="#000000"
            android:autofillHints="@string/re_enter_password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/txtPhoneNo"
            android:background="@drawable/edittext_universal"
            android:hint="@string/phone_number"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            android:textSize="16sp"
            android:textColor="#000000"
            android:autofillHints="@string/phone_number" />


        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:height="40dp"
            android:layout_marginTop="35dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_universal"
            android:text="@string/sign_up_here" />



        <LinearLayout
            android:layout_marginTop="80dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="sans-serif-light"
                android:text="@string/already_have_an_account"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />

            <Button
                android:id="@+id/btnBackToSignIn"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="casual"
                android:layout_marginStart="5dp"
                android:text="@string/sign_in"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:textSize="21sp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>