<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SignUpActivity"
    android:background="@drawable/expensebg">

    <TextView
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtRegistration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="123dp"
        android:fontFamily="sans-serif-black"
        android:text="Registeration"
        android:textColor="@color/colorPrimary"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_centerInParent="true"
        android:id="@+id/layout1"
        android:layout_below="@+id/txtRegistration"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="20dp">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/txtEmail"
            android:background="@drawable/buttonstyle"
            android:hint="@string/e_mail"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:autofillHints="@string/e_mail" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/txtPass"
            android:background="@drawable/buttonstyle"
            android:hint="@string/password"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:autofillHints="@string/password" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:id="@+id/txtRepeatPass"
            android:background="@drawable/buttonstyle"
            android:hint="@string/re_enter_password"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:autofillHints="@string/re_enter_password" />


        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:height="40dp"
            android:layout_marginTop="35dp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            android:background="@drawable/edittextstyle"
            android:text="@string/sign_up_here" />

    </LinearLayout>


    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="80dp"
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/already_have_an_account"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="19sp" />

        <Button
            android:id="@+id/btnBackToSignIn"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="casual"
            android:layout_marginStart="5dp"
            android:text="@string/sign_in"
            android:padding="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="21sp" />

    </LinearLayout>


</RelativeLayout>